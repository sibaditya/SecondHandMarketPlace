<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/error_layout">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/error_animation"
        android:layout_width="@dimen/error_animation_width"
        android:layout_height="@dimen/error_animation_height"
        android:layout_marginStart="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_0dp"
        android:layout_marginEnd="@dimen/dimen_0dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="error_view.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_gravity="center"/>

</LinearLayout>